<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anqi.stack.activity.MainActivity">



    <Button
        android:id="@+id/AsyncPost"
        android:onClick="click"
        android:text="异步post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/AsyncGet"
        android:onClick="click"
        android:layout_below="@id/AsyncPost"
        android:text="异步get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/SyncGet"
        android:onClick="click"
        android:layout_below="@id/AsyncGet"
        android:text="同步get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/SyncPost"
        android:onClick="click"
        android:layout_below="@id/SyncGet"
        android:text="同步post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/db"
        android:onClick="click"
        android:layout_below="@id/SyncPost"
        android:text="db测试"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<ScrollView
    android:layout_below="@id/db"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_below="@id/SyncPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="18dp"
        android:layout_centerInParent="true"
        />
</ScrollView>


</RelativeLayout>
